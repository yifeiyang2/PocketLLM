# Docker Environment Variables Example
# Copy this file to .env.docker and customize as needed

# ===== Backend Configuration =====
PYTHON_ENV=production
MODEL_PATH=/models/tinyllama-1.1b-chat-q4.gguf
REDIS_HOST=redis
REDIS_PORT=6379
DATABASE_URL=sqlite:///./data/pocketllm.db

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Configuration
MAX_TOKENS=512
TEMPERATURE=0.7
CONTEXT_LENGTH=2048

# ===== Frontend Configuration =====
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ===== Redis Configuration =====
REDIS_MAX_MEMORY=256mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# ===== Resource Limits =====
# Backend
BACKEND_CPU_LIMIT=3
BACKEND_MEMORY_LIMIT=12G

# Frontend
FRONTEND_CPU_LIMIT=1
FRONTEND_MEMORY_LIMIT=2G

# Redis
REDIS_CPU_LIMIT=0.5
REDIS_MEMORY_LIMIT=512M
